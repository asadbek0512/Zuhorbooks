<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/signup.css" />

<body>
  <div class="signup-container">
    <form onsubmit="return validateSignupForm()" action="/admin/signup" method="POST" enctype="multipart/form-data">
      <div class="signup-frame" style="width: 650px">
        <div class="signup-top">
          <span>Signup</span>
          <div>Go back <a href="/admin" >Home</a></div>
          <p>
            Already signed up?
            <a href="/admin/login">Login</a>
          </p>
        </div>

        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>Restaurant *</label>
            <input
              type="text"
              name="memberNick"
              class="member-nick"
              placeholder="Username"
              value=""
            />
          </div>
          <div class="sign-up-frame">
            <label>Phone *</label>
            <input
              type="text"
              name="memberPhone"
              class="member-phone"
              placeholder="Phone"
              value=""
            />
          </div>
        </div>
        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>Password *</label>
            <div class="password-wrapper">
              <input
                type="password"
                name="memberPassword"
                class="member-password"
                placeholder="Password"
                value=""
              />
              <span class="toggle-password" onclick="togglePassword(this)">ğŸ‘ï¸</span>
            </div>
          </div>
        
          <div class="sign-up-frame">
            <label>Repeat password *</label>
            <div class="password-wrapper">
              <input
                type="password"
                name="confirmPassword"
                class="confirm-password"
                placeholder="Repeat password"
                value=""
              />
              <span class="toggle-password" onclick="togglePassword(this)">ğŸ‘ï¸</span>
            </div>
          </div>
        </div>
        
        <div class="signup-input-frame">
          <div class="media-frame">
            <img class="upload-img-frame" src="/img/books.jpg" />
            <div class="upload-container">
              <span class="media-text">Product image</span>
              <div
              class="file-box bs3-primary preview-image"
              style="margin-top: 25px; display: flex"
            >
              <input
                class="upload-name"
                value="Choose image"
                disabled="disabled"
              />
              <label for="input-file" class="file-input-label">Upload Image</label>
              <input
                type="file"
                id="input-file"
                class="upload-hidden form-control-file member-image"
                name="memberImage"
              />
            </div>
              <p class="thumbnail-desc">
                Please upload restaurant image.<br />
                Attention only:.jpg, .jpeg, or .png. <br />
                formats allowed!
              </p>
            </div>
          </div>
        </div>

        <input name="memberType" value="RESTAURANT" hidden />

        <button class="signup-btn btn" name="signup" type="submit">
          Signup
        </button>
      </div>
    </form>
  </div>

  <script>
    function togglePassword(iconElement) {
      const passwordInput = iconElement.previousElementSibling;
  
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        iconElement.textContent = "ğŸ™ˆ";
      } else {
        passwordInput.type = "password";
        iconElement.textContent = "ğŸ‘ï¸";
      }
    }
  </script>
  
  <script type="text/javascript" src="/js/signup.js"></script>
</body>

<%- include('includes/footer') %>
